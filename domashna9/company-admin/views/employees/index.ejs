<%- include('../partials/header') %>
<a href="/employees/create" class="btn btn-primary mt-5">Add new employee</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Monthly Salary</th>
      <th scope="col">Job</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% employees.forEach(employee => { %>
      <tr>
        <th scope="row"><%= employee.first_name %></th>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= employee.salary %></td>
        <td style="text-transform: capitalize;"><%= employee.job_title.name + ': ' + employee.job_title.description %></td>
        <td>
          <a href="/employees/<%= employee._id %>" class="btn btn-warning"><i class="bi bi-pencil-fill"></i></a>
          <a href="javascript:;" onclick="deleteEmployee(`<%= employee._id %>`)" class="btn btn-danger"><i class="bi bi-trash"></i></a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>